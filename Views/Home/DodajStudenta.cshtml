@model StudEvidencija.Models.Student
@{
	ViewBag.Title = "DodajStudenta";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Dodavanje studenta</h2>
<br />
@using (Html.BeginForm())
{
<form>
	<div class="row">
		<div class="col-md-4"></div>
		<div class="col-md-4 p-1">
			<div class="form-group">
				@Html.LabelFor(x => x.Ime)
				@Html.EditorFor(x => x.Ime, new { htmlAttributes = new { @class = "form-control" } })
			</div>
			<div class="form-group">
				@Html.LabelFor(x => x.Prezime)
				@Html.EditorFor(x => x.Prezime, new { htmlAttributes = new { @class = "form-control" } })
			</div>
			<div class="form-group">
				@Html.LabelFor(x => x.Fakultet)
				@Html.EditorFor(x => x.Fakultet, new { htmlAttributes = new { @class = "form-control" } })
			</div>
			<div class="form-group">
				<div class="row">
					<div class="col-6">
						<button type="reset" class="btn btn-danger btn-block">Obriši</button>
					</div>
					<div class="col-6">
						<button type="submit" class="btn btn-success btn-block">Spremi</button>
					</div>
				</div>

			</div>


		</div>
		<div class="col-md-4"></div>

	</div>
</form>

}
